<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zar.campusrecruitment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.AdminLoginActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ui.StudentLoginActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ui.CompanyLoginActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ui.CompanySignUpActivity"
            android:parentActivityName=".ui.CompanyLoginActivity"/>
        <activity android:name=".ui.StudentSignUpActivity"
            android:parentActivityName=".ui.StudentLoginActivity"/>
        <activity android:name=".ui.StudentInUniActivity"
            android:parentActivityName=".ui.CompanyLoginActivity">

        </activity>

        <activity android:name=".ui.CompanyDataForStudentActivity" />
        <activity android:name=".ui.AdminActivity"></activity>
    </application>

</manifest>